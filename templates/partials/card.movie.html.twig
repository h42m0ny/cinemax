<div class="col w-100">
 <div class="card" style="width: 30rem;height:300px">
  <div class="card-body">
  <img class="rounded float-right" src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/{{ movie.image }}"  height="200" alt="Movie poster"/>
    <h5 class="card-title">{{ movie.title }}</h5>
     <p class="card-text">{{ movie.note }}</p>
     <h6 class="card-subtitle mb-2 text-muted">{{ movie.releaseDate ? movie.releaseDate|date('d-m-Y') : '' }}</h6>
     <p class="card-text">{{ movie.summary | slice(0, 100) }}</p>
     
     <p class="card-text">
     {% for genre in movie.genres %}
        <a href="#"> {{genre.name}} </a>
            {% if not loop.last %}, {% endif %}
        {% endfor %}
    </p>
     <a href="{{ path('movie_show', {'id': movie.id}) }}" class="btn btn-primary">DÃ©tail</a>
  </div>
</div>
</div>